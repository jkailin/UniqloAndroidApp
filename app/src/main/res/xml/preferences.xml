<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="preferences"
        app:title="Preferences">

        <ListPreference
            app:key="theme"
            app:title="Theme"
            android:icon="@drawable/ic_color_lens_black_24dp"
            app:entries="@array/theme_titles"
            app:entryValues="@array/theme_values"
            app:useSimpleSummaryProvider="true"

            />

        <EditTextPreference
            android:key="name"
            android:title="Name"
            android:dialogTitle="Name"
            android:icon="@drawable/ic_settings_black_24dp"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <Preference
        app:key="payment"
        app:title="Payment Details"
        android:icon="@drawable/ic_payment_black_24dp"
        />

