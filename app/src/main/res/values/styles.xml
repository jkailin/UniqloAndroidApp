<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.Uniqlo.Toolbar</item>
       <!-- <results_item name="fontFamily">@font/source_sans_pro_semibold</results_item>
        <results_item name="android:fontFamily">@font/source_sans_pro_semibold</results_item>-->
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.Uniqlo.Toolbar</item>
        <!-- <results_item name="fontFamily">@font/source_sans_pro_semibold</results_item>
         <results_item name="android:fontFamily">@font/source_sans_pro_semibold</results_item>-->
    </style>

    <style name="Widget.Uniqlo.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Uniqlo.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="contentInsetStartWithNavigation">64dp</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:elevation">8dp</item>
    </style>

    <!--Discover-->
    <style name="Widget.Uniqlo.AdCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TextAppearance.Uniqlo.Discover.SectionHeader" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Uniqlo.Discover.ItemTitle" parent="TextAppearance.MaterialComponents.Headline6" >
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Uniqlo.Discover.ItemBody" parent="TextAppearance.MaterialComponents.Body1" >
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!--Cart-->
    <style name="TextAppearance.Uniqlo.Cart.Name" parent="TextAppearance.MaterialComponents.Body1" >
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Uniqlo.Cart.Body" parent="TextAppearance.MaterialComponents.Body2" >
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>


    <!--Item Details-->
    <style name="TextAppearance.Uniqlo.ItemDetails.Title" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Uniqlo.ItemDetails.Body" parent="TextAppearance.MaterialComponents.Body1" >
        <item name="android:textColor">?android:textColorSecondary</item>

    </style>

    <!--Settings-->
    <style name="TextAppearance.Uniqlo.Settings.SectionHeader" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textStyle">bold</item>
        </style>

    <style name="TextAppearance.Uniqlo.Settings.SectionItem" parent="TextAppearance.MaterialComponents.Headline6" >
    </style>

</resources>
